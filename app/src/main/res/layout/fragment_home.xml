<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/homeGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Guest"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileImage"
            app:layout_constraintVertical_bias="0.025" />

        <View
            android:id="@+id/blank_space"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/homeGreeting"/>

        <ImageView
            android:id="@+id/universityImage"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/university"
            android:layout_marginTop="20dp"
            android:contentDescription="Picture of a university"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/blank_space"/>

        <TextView
            android:id="@+id/introText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:text="At one of our fantastic on-campus Open Days, youâ€™ll be able to discover everything you need to know about why our award-winning institution is the first choice for thousands of students around the world."
            app:layout_constraintTop_toBottomOf="@id/universityImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/continuedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:text="We know there's nothing quite like actually stepping onto campus to discover our facilities, check out our accommodation, learn more about your chosen course and meet your potential future lecturers  - but if you're unable to come onto campus, we also offer the next best thing: Virtual Open Days. These give you the chance to find out about everything Staffordshire University has to offer from the comfort of your own home."
            app:layout_constraintTop_toBottomOf="@id/introText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/continuedText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5sp">

            <TableRow
                android:background="#FFFFFF"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">
                <TableRow
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:text="Upcoming Dates"
                        android:textAlignment="center" />

                </TableRow>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:stretchColumns="0,1,2"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="Site"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="Building"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="Date/Time"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_column="2"/>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:stretchColumns="0,1,2">

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="Stoke-On-Trent"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="Mellor"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="14/06/2022 09:30am"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_column="2"/>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:stretchColumns="0,1,2">

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="Stoke-On-Trent"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="Catalyst"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="21/06/2022 11:00am"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_column="2"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:stretchColumns="0,1,2"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="Stoke-On-Trent"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="Cadman"
                    android:layout_column="1"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:text="14/06/2022 13:30pm"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_column="2"/>
            </TableRow>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
